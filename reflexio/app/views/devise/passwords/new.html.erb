<% content_for :page_title do %>Password Reset<% end %>
<% content_for :main_heading do %>
<h1>Password Reset</h1>
<% end %>
<% content_for :sub_heading do %>
<h3></h3>
<% end %>
<div id="login_container">
<div id="login_main">
<%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }) do |f| %>
<div class="bigboxes" id="login_panel">
<%= f.email_field :email, :class => 'modal_input', :placeholder => 'Email' %><br />
<%= f.submit "Reset Me", :class => 'critical_button standard_button_size loginButton' %>
</div>
<% end %>
<%= render "devise/shared/links" %>
</div>
</div>
