<% content_for :page_title do %>Sign In or Sign Up<% end %>
<% content_for :main_heading do %>
<h1>Sign Up</h1>
<% end %>
<% content_for :sub_heading do %>
<h3></h3>
<% end %>
<div id="login_container">
<div id="login_main">
<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
<div class="bigboxes" id="login_panel">
<%= f.email_field :email, :class => 'modal_input', :placeholder => 'Email' %><br />
<%= f.password_field :password, :class => 'modal_input', :placeholder => 'Password' %><br />
<%= f.password_field :password_confirmation, :class => 'modal_input', :placeholder => 'Confirm Password' %><br />
<%= f.submit "Sign Up", :class => 'critical_button standard_button_size loginButton' %>
</div>
<% end %>
<%= render "devise/shared/links" %>
</div>
</div>

