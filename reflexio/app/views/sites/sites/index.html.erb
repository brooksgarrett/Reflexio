<% content_for :page_title do %>Manage Sites<% end %>
		  <% content_for :main_heading do %>
          <h1>Dashboard</h1>
		  <% end %>
		  <% content_for :sub_heading do %>
            <h3>Manage Sites</h3>
		  <% end %>

            <table class="prettygrid" cellspacing="0" cellpadding="0" rules="all" border="1" id="MainContent_gvResults" style="width:100%;border-collapse:collapse;">
              <tr class="prettygrid-header">
                <th align="center" scope="col">Org</th><th align="center" scope="col">URL</th><th align="left" scope="col">Last Checked</th><th align="center" scope="col">Last Status</th><th align="center" scope="col">Status Report</th>
              </tr>
              <% @sites.each do |site| %>
              <tr class=<%= cycle("prettygrid-row", "prettygrid-alt") %>>
                <td align="center"><%= site.org %></td>
                <td align="left"><%= site.url %></td>
                <td align="left"><%= site.last_updated %></td>
                <td align="center">
                  <span class="rejected"><%= site.result %></span>
                </td>
                <td align="center" style="white-space:nowrap;">
                  <%= link_to 'Show', site %>
                  <%= link_to 'Edit', edit_site_path(site) %>
                  <%= link_to 'Destroy', site, method: :delete, data: { confirm: 'Are you sure?' } %>
                </td>
              </tr>
              <% end %>
            </table>
